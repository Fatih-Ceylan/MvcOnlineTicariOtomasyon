@using MvcOnlineTicariOtomasyon.Models.Classes
@model IList<Urun>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";

}
<br />
@using (Html.BeginForm("Index","Urun",FormMethod.Get))
            {
                <p>
                    Ürün Adı: @Html.TextBox("p")
                    <input type="submit" value="Ara"/>
                </p>
            } 
<table class="table table-bordered">
    <tr>
        <th>ÜRÜN</th>
        <th>MARKA</th>
        <th>STOK</th>
        <th>ALIŞ FİYATI</th>
        <th>SATIŞ FİYATI FİYATI</th>
        <th>KATEGORİ</th>
        <th>GÜNCELLE</th>
        <th>SATIŞ YAP</th>
    </tr>
    @foreach (var u in Model)
    {
        <tr>
            <td>@u.UrunAdi</td>
            <td>@u.Marka</td>
            <td>@u.Stok</td>
            <td>@u.AlisFiyat ₺</td>
            <td>@u.SatisFiyat ₺</td>
            <td>@u.Kategori?.KategoriAd</td>
            <td>
                <a href="/Urun/UrunSil/@u.UrunId" class="btn btn-danger">Sil</a>
            </td>
            <td>
                <a href="/Urun/UrunGetir/@u.UrunId" class="btn btn-warning">Güncelle</a>
            </td>
            <td>
                <a href="/Urun/SatisYap/@u.UrunId" class="btn btn-info">Satış Yap</a>
            </td>
        </tr>
        }
</table>
<a href="/Urun/YeniUrun/" class="btn btn-info">Yeni Ürün</a>
