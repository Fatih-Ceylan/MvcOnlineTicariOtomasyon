@using MvcOnlineTicariOtomasyon.Models.Classes
@model Urun
@{
    ViewData["Title"] = "YeniUrun";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Yeni Ürün Sayfası</h2>
<br />
<form class="form-group" method="post">
    @Html.LabelFor(x => x.UrunAdi)
    @Html.TextBoxFor(x => x.UrunAdi, new { @class = "form-control", style = "width:25%;" })
    <br />
    @Html.LabelFor(x => x.Marka)
    @Html.TextBoxFor(x => x.Marka, new { @class = "form-control", style = "width:25%;" })
    <br />
    @Html.LabelFor(x => x.Stok)
    @Html.TextBoxFor(x => x.Stok, new { @class = "form-control", style = "width:25%;" })
    <br />
    @Html.LabelFor(x => x.AlisFiyat)
    @Html.TextBoxFor(x => x.AlisFiyat, new { @class = "form-control", style = "width:25%;" })
    <br />
    @Html.LabelFor(x => x.SatisFiyat)
    @Html.TextBoxFor(x => x.SatisFiyat, new { @class = "form-control", style = "width:25%;" })
    <br />
    @Html.LabelFor(x => x.Kategori.KategoriId)
    @Html.DropDownListFor(x => x.KategoriId, (List<SelectListItem>)ViewBag.kategoriList, new { @class = "form-control", style = "width:25%;" })
    <br />
    <div class="form-check form-switch d-flex align-items-center gap-2">
        @Html.LabelFor(x => x.Durum, new { @class = "form-check-label" })
        @Html.CheckBoxFor(x => x.Durum, new { @class = "form-check-input" })
    
    </div>
    <br />
    <button class="btn btn-primary">Kaydet</button>
</form>