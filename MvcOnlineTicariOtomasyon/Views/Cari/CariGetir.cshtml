@using MvcOnlineTicariOtomasyon.Models.Classes
@model Cari

@{
    ViewData["Title"] = "CariGetir";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h1>Cari Güncelleme</h1>
<br />
@using (Html.BeginForm("CariGuncelle", "Cari", FormMethod.Post))
{
    <div class="form-group">
        @Html.HiddenFor(x => x.CariId)

        @Html.LabelFor(x => x.CariAd)
        @Html.TextBoxFor(x => x.CariAd, new { @class = "form-control", style = "width:25%;" })
        @Html.ValidationMessageFor(x => x.CariAd,"", new { @style = "color:red" })
        <br />
        @Html.LabelFor(x => x.CariSoyad)
        @Html.TextBoxFor(x => x.CariSoyad, new { @class = "form-control", style = "width:25%;" })
        @Html.ValidationMessageFor(x => x.CariAd,"", new { @style = "color:orange" })
        <br />
        @Html.LabelFor(x => x.CariSehir)
        @Html.TextBoxFor(x => x.CariSehir, new { @class = "form-control", style = "width:25%;" })
        <br />
        @Html.LabelFor(x => x.CariMail)
        @Html.TextBoxFor(x => x.CariMail, new { @class = "form-control", style = "width:25%;" })
        <br />
        @Html.LabelFor(x => x.Durum)
        @Html.CheckBoxFor(x => x.Durum, new { @class = "input-group", style = "width:25%;" })
        <br />

    </div>
    <button class="btn-warning">Güncelle</button>
}