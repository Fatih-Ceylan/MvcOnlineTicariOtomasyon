@using MvcOnlineTicariOtomasyon.Models.Classes
@model List<Personel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div style="margin:20px">
    <table class="table table-bordered">
        <tr>
            <th>ID</th>
            <th>Personel Adı</th>
            <th>Personel Soyadı</th>
            <th>Görsel</th>
            <th>Departman</th>
            <th>Satışlar</th>
            <th>Güncelle</th>
            <th>Sil</th>
        </tr>
        @foreach (var p in Model)
        {
            <tr>
                <td>
                    @p.PersonelId
                </td>
                <td>
                    @p.PersonelAd
                </td>
                <td>
                    @p.PersonelSoyad
                </td>
                <td>
                    <img src="@p.PersonelGorsel" style='height: 64px; width: 64px; object-fit: cover ' />
                </td>
                <td>
                    @p.Departman.DepartmanAdi
                </td>
                <td><a href="/Departman/DepartmanPersonelSatis/@p.PersonelId" class="btn btn-info">Detaylar</a></td>
                <td><a href="/Personel/PersonelGetir/@p.PersonelId" class="btn btn-warning">Güncelle</a></td>
                <td><a href="/Personel/PersonelSil/@p.PersonelId" class="btn btn-danger">Sil</a></td>
            </tr>
        }
    </table>
    <a href="/Personel/PersonelEkle" class="btn btn-primary">Personel Ekle</a>
</div>

