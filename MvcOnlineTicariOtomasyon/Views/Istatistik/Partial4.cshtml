@model IEnumerable<MvcOnlineTicariOtomasyon.Models.PartialClasses.SinifGrup3>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Ürün Marka Tablosu</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Marka</th>
                    <th>Progress Bar</th>
                    <th style="width: 40px">Toplam</th>
                </tr>
            </thead>
            <tbody>
                @{ int siraNo = 0;}
                @foreach (var x in Model)
                {
                    <tr>
                        <td>@{siraNo++;} @siraNo</td>
                        <td>@x.Marka</td>
                        <td>
                            @if (x.Sayi == 1)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-success" style="width: 25%"></div>
                                </div>
                            }
                            @if (x.Sayi == 2)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar  bg-warning" style="width: 55%"></div>
                                </div>
                            }
                            @if (x.Sayi > 2)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-danger" style="width: 75%"></div>
                                </div>
                            }
                        </td>
                        @if (x.Sayi == 1)
                        {
                            <td><span class="badge bg-success">@x.Sayi</span></td>
                        }
                        @if (x.Sayi == 2)
                        {
                            <td><span class="badge bg-warning">@x.Sayi</span></td>
                        }
                        @if (x.Sayi > 2)
                        {
                            <td><span class="badge bg-danger">@x.Sayi</span></td>
                        }
                    </tr>
                }

            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>