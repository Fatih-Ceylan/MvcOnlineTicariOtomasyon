@model MvcOnlineTicariOtomasyon.Models.Classes.Kargo.KargoDetay
@{
    ViewData["Title"] = "YeniKargo";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Yeni Kargo Bilgisi Sayfası</h1>
 
<br />
<form class="form-group" method="post">
    @Html.LabelFor(x => x.TakipKodu)
    @Html.TextBoxFor(x => x.TakipKodu, new { @class = "form-control", style = "width:25%;" })
    <br />
    @Html.LabelFor(x => x.Personel)
    @Html.TextBoxFor(x => x.Personel, new { @class = "form-control", style = "width:25%;" })
    <br />
    @Html.LabelFor(x => x.Alici)
    @Html.TextBoxFor(x => x.Alici, new { @class = "form-control", style = "width:25%;" })
    <br />
    @Html.LabelFor(x => x.Tarih)
    <input class="form-control" type="date" name="Tarih" style="width:25%;" />
    <br />
    @Html.LabelFor(x => x.Aciklama)
    @Html.TextAreaFor(x => x.Aciklama, new { @class = "form-control", style = "width:25%;" })
    <br />
    <button class="btn btn-primary">Kaydet</button>
</form>