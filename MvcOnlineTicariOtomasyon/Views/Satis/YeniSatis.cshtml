@model MvcOnlineTicariOtomasyon.Models.Classes.Hareketler.SatisHareket
@{
    ViewData["Title"] = "YeniSatis";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Yeni Satış Sayfası</h2>
<br />
<form class="form-group" method="post">
    @Html.LabelFor(x => x.Urun)
    @Html.DropDownListFor(x => x.UrunId, (List<SelectListItem>)ViewBag.UrunList, new { @class = "form-control", style = "width:25%;" })
    <br />
    @Html.LabelFor(x => x.Cari)
    @Html.DropDownListFor(x => x.CariId, (List<SelectListItem>)ViewBag.CariList, new { @class = "form-control", style = "width:25%;" })
    <br />
    @Html.LabelFor(x => x.Personel)
    @Html.DropDownListFor(x => x.PersonelId, (List<SelectListItem>)ViewBag.PersonelList, new { @class = "form-control", style = "width:25%;" })
    <br />
    @Html.LabelFor(x => x.Adet)
    @Html.TextBoxFor(x => x.Adet, new { @class = "form-control", style = "width:25%;" })
    <br />
    @Html.LabelFor(x => x.Fiyat)
    @Html.TextBoxFor(x => x.Fiyat, new { @class = "form-control", style = "width:25%;" })
    <br />
    @Html.LabelFor(x => x.ToplamTutar)
    @Html.TextBoxFor(x => x.ToplamTutar, new { @class = "form-control", style = "width:25%;" })
    <br />
   
    <button class="btn btn-primary">Satış Yap</button>
</form>