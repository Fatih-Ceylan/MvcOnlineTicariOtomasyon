@using MvcOnlineTicariOtomasyon.Models.Classes
@model List<MvcOnlineTicariOtomasyon.Models.Classes.Hareketler.SatisHareket>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div style="margin:20px">
    <table id="tbl1" class="table table-bordered" style="margin-top:20px">
        <thead>
            <tr>
                <th>ID</th>
                <th>Ürün</th>
                <th>Cari</th>
                <th>Personel</th>
                <th>Adet</th>
                <th>Fiyat</th>
                <th>Toplam</th>
                <th>Tarih</th>
                <th>Güncelle</th>
                <th>Detaylar</th>
            </tr>
        </thead>
        @foreach (var p in Model)
        {
            <tr>
                <td>
                    @p.SatisId
                </td>
                <td>
                    @p.Urun.UrunAdi
                </td>
                <td>
                    @p.Cari.CariAd @p.Cari.CariSoyad
                </td>
                <td>
                    @p.Personel.PersonelAd @p.Personel.PersonelSoyad
                </td>
                <td>
                    @p.Adet
                </td>
                <td>
                    @p.Fiyat
                </td>
                <td>
                    @p.ToplamTutar
                </td>
                <td>
                    @p.Tarih
                </td>
                <td><a href="/Satis/SatisGetir/@p.SatisId" class="btn btn-warning">Güncelle</a></td>
                <td><a href="/Satis/SatisDetay/@p.SatisId" class="btn btn-info">Detaylar</a></td>
            </tr>
        }
    </table>
    <a href="/Satis/YeniSatis" class="btn btn-primary">Yeni Satış Yap</a>
</div>




<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    console.log("jQuery loaded:", typeof jQuery !== 'undefined'); // true dönerse yüklü
    $(document).ready(function () {
        var table = $('#tbl1').DataTable({
            language: {
                url: "//cdn.datatables.net/plug-ins/1.10.12/i18n/Turkish.json"
            },
            //dom: 'Bfrtip', // Butonların yerleşimini belirler
            //buttons: ['copy', 'excel', 'csv', 'pdf', 'colvis'], // Kullanılacak butonları belirtir
        });

    });
</script>



